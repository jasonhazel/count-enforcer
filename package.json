{
  "name": "discord-bot",
  "version": "1.0.0",
  "description": "Discord bot with SQLite integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "docker:start": "docker compose up --build",
    "docker:build-push": "docker build -t mrhazel/count-enforcer . && docker push mrhazel/count-enforcer",
    "test": "jest --verbose --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy": "git checkout main && git merge \"$1\" && git push origin main && npm run docker:build-push"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.1",
    "discord.js": "^14.14.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/db/**",
      "!src/lang/**",
      "!src/web/**",
      "!src/db/migrations/**",
      "!src/__tests__/commands/commands.command.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "!**/src/db/**",
      "!**/src/lang/**",
      "!**/src/web/**",
      "!**/src/db/migrations/**",
      "!**/src/__tests__/commands/commands.command.test.js"
    ]
  }
}
